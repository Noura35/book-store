@model Bookly.Models.Book

@{
    ViewData["Title"] = "Details";
}

<div class="container " style="margin: 200px">
    <h4 class="mb-4">Book Details</h4>
    <hr />
    <div class="row">
        <!-- Section de l'image du livre -->
        <div class="col-md-4">
            <div class="book-image">
                @if (!string.IsNullOrEmpty(Model.urlImg))
                {
                    <img src="@Model.urlImg" alt="Book cover" class="img-fluid" />
                }
                else
                {
                    <img src="default-cover.jpg" alt="Default book cover" class="img-fluid" />
                }
            </div>
        </div>

        <!-- Section des dÃ©tails du livre -->
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.title)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.title)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.desc)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.desc)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.author)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.author)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.lang)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.lang)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.isbn)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.isbn)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.datePub)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.datePub)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.price)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.price)</dd>
            </dl>
        </div>
    </div>
    
    <hr />
    <div class="actions my-4">
      
        
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn me-2">
            <i class="fa-solid fa-pen-to-square"></i> Edit
        </a>

    </div>
</div>
