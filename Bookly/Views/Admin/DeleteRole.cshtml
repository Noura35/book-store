@using Microsoft.AspNetCore.Identity
@model IdentityRole



<div class="container " style="margin: 200px">
<h4 class="mb-4" >You are about to delete the role "@Model.Name"</h4>
<h6 class="mb-2">This action can't be undone</h6>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="mt-3">
    <div class=" form-group mt-2">
        <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Delete</button>

        <a asp-action="ListAllRoles" class="btn btn-warning"><i class="fa-solid fa-ban"></i> Cancel</a>
    </div>
</form>

</div>