@model Order

@{
    ViewData["Title"] = "CheckoutComplete";
}

<h1>Thank you for your order!</h1>

<h5 class="mt-5">Order Id: @Model.Id</h5>
<table class="table">
    <thead>
    <tr>
        <th></th>
        <th>Book</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.orderItems)
    {
        var itemTotal = item.book.price * item.quantity;
        <tr>
            <td>
                <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id"><img src="@item.book.urlImg" style="height: 4em"></a>
            </td>
            <td>
                <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">@item.book.title</a>
            </td>
            <td>
                @itemTotal.ToString("c")
            </td>
            <td>
                @item.quantity
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
    <td></td>
    <td class="text-right">
        <strong>Total:</strong>
    </td>
    <td>
        <strong>@Model?.OrderTotal.ToString("c")</strong>
    </td>
    <td></td>
    </tfoot>
</table>
